@model Battleships.Web.Models.IndexViewModel
@{
    ViewBag.Title = "Zarządzaj";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account options</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("ChangePassword", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("SetPassword", "SetPassword")
            }
            ]
        </dd>
    </dl>
</div>
