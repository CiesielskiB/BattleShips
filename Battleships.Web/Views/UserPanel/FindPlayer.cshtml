@model IEnumerable<Battleships.Core.ViewModels.SearchUserModel>

<div class="row">
    @Html.Partial("UserPanelNavbarPartial")
    <main class="col-md-9 ml-sm-auto col-lg-10 px-4 pt-2">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <form class="card card-sm">
                    <div class="card-body row no-gutters align-items-center">
                        <div class="col ">
                            <input class="form-control form-control-lg form-control-borderless" type="search" name="searchQuery" placeholder="Search username">
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-lg btn-success" value="FindPlayer" type="submit">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row justify-content-center">
            <table class="table table-striped">
                @foreach (var item in Model)
                {
                    

                    <tr>
                        <td>
                            @(item.lp).
                        </td>
                        <td >
                            <img class="img img-thumbnail" style="max-height:50px" src="~/Content/Pictures/@item.Image" />
                            @Html.ActionLink(item.UserName, "PlayerDetails", new { userId = item.UserId })
                        </td>

                    </tr>
                }
            </table>
            
        </div>
    </main>
</div>